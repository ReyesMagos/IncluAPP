<div class="container">
	<div class="row clearfix">
		<div class="col-md-6 col-md-offset-3">
			<form role="form" action="/experiencia/update/<%=experience.id%>" method="POST">
				<div class="form-group">
					<div class="row">
						<div class="col-xs-4">
							<label for="title">Title</label>
						</div>
						<div class="col-xs-8">
							<input type="text" class="form-control" id="title" value="<%=experience.title%> "name="title" required/>
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="row">
						<div class="col-xs-4">
							<label for="description">Descripcion</label>
						</div>
						<div class="col-xs-8">
							<input type="text" class="form-control" id="description" value="<%=experience.description%> " name="description" required />
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="row">
						<div class="col-xs-4">
							<label for="depto">Departamento</label>
						</div>
						<div class="col-xs-8">
							<input type="email" value="<%=experience.depto%> " class="form-control" id="depto" name="depto" required/>
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="row">
						<div class="col-xs-4">
							<label for="city">Ciudad</label>
						</div>
						<div class="col-xs-8">
							<input type="text" class="form-control" value="<%=experience.city%> " id="city" name="city" required />
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="row">
						<div class="col-xs-4">
							<label for="address">Direccion</label>
						</div>
						<div class="col-xs-8">
							<input type="tel" class="form-control" id="address" value="<%=experience.address%> " name="address"  required/>
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="row">
						<div class="col-xs-4">
							<label for="state">Estado</label>
						</div>
						<div class="col-xs-8">
							<input type="tel" class="form-control" value="<%=experience.state%> " id="state" name="state"required  />
						</div>
					</div>
				</div>
					<div class="form-group">
				<button type="submit" class="btn btn-success btn-lg  pull-right" >Guardar</button>
				</div>
			</form>
		</div>
	</div>
</div>